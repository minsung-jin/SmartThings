/valve:
  displayName: WWST valve
  description: |
    This resource implements tamper alert capability from SmartThings.
  is : ['interface']

  get:
    description: |
      Retrieves the current value of valve.
    responses :
      200:
        body:
          application/json:
            schema: valve
            example: |
              {
                "rt":    ["x.com.st.valve"],
                "id": "unique_example_id",
                "valve": true
              }
      400:
        body:
          application/json:
            schema: Exception
            example: |
              {
                "code": "OCF_001",
                "message": "Failed to process OCF request!"
              }


  post:
    description: |
      Update  the current value of valve.

    body:
      application/json:
        schema: valve
        example: |
          {
            "id": "unique_example_id",
            "valve":	true
          }
    responses :
      200:
        body:
          application/json:
            schema: valve
            example: |
              {
                "rt": ["x.com.st.valve"],
                "id": "unique_example_id",
                "valve":	true
              }
      403:
        body:
          application/json:
            schema: Exception
            example: |
              {
                "code": "OCF_01",
                "message": "Failed to process OCF request!"
              }

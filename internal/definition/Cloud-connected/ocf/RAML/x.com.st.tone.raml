traits:
 - interface:
      queryParameters:
        if:
          enum: ["oic.if.baseline"]

/tone:
  description: |
        This resource specifies the tone value as true to indicate to beep
  displayName: WWST tone
  is: [ interface ]
  post:
    description: |
      Sets the desired Tone beep.
    body:
      application/json:
        schema: Tone
        example: |
          {
            "id":             "unique_id",
            "toneValue":  true
          }
    responses:
     200:
      description: |
        Indicates that the Tone beep was changed.
        The beep status is provided in the response.
      body:
        application/json:
         schema: Tone
         example: |
          {
           "id":             "unique_id",
           "toneValue":  true
          }

schemas:
- Tone: |
    {
     "id": "http://www.samsung.com/schemas/x.com.st.tone.json#",
     "$schema": "http://json-schema.org/draft-04/schema#",
     "description": "Copyright (c) 2016 Samsung Electronics, Inc. All rights reserved.",
